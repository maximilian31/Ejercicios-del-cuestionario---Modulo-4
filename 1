/******************************************************************************
Escribir en lenguaje C++ un programa que permite ingresar una matriz de 3x3 y guarde
en un nuevo array los elementos pares y en otro array los impares.
1. Pida por teclado los 9 números de la matriz.
2. Recorra la matriz y genere 2 nuevos arrays.
a. Un array con números pares.
b. Un array con números impares.
3. Muestre por pantalla ambos arrays.
*******************************************************************************/
#include <iostream>

using namespace std;

int main()
{
    int matriz[3][3];
    int pares[3][3] = {0};
    int impares[3][3] = {0};
    
    //Aca es para ingresar los numeros de la matriz
    cout << "Ingrese los 9 numeros de la matriz " << endl;
    for(int i = 0; i < 3; i++)
    {
        for(int j = 0; j < 3; j++)
        {
            cin >> matriz[i][j]; // Hasta aca guarda los 9  numeros en la matriz
            if(matriz[i][j] % 2 == 0) // condicion para que sea par
            {
                pares[i][j] = matriz[i][j];
            } else {
                impares[i][j] = matriz[i][j];
            }
        }
    }
    // Muestra los pares
    cout << "La matriz de numeros pares quedaria: \n";
    for(int i = 0; i < 3; i++)
    {
        for(int j = 0; j < 3; j++)
        {
            cout << pares[i][j] << " ";
        }
        cout << endl;
    }
    // Muestra los impares
    cout << "La matriz de numeros impares quedaria: \n";
    for(int i = 0; i < 3; i++)
    {
        for(int j = 0; j < 3; j++)
        {
            cout << impares[i][j] << " ";
        }
        cout << endl;
    }
    
}
